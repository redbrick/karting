<div class="container my-5">
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1">{{ key.name }}</h1>
            <h6 class="h6 text-danger align-text-bottom pt-2">
                <i class="bi bi-calendar-event-fill"></i>
                {{ key.date }}
            </h6>
            <p class="lead">{{ key.description }}</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                <a class="btn btn-danger btn-lg px-4 gap-3" target="_blank" href="{{ key.primary_link }}"
                    role="button">{{ key.primary_text }}</a>
                {% if key.secondary_text != "" %}
                <a class="btn btn-outline-secondary btn-lg px-4" target="_blank" href="{{ key.secondary_link }}"
                    role="button">{{ key.secondary_text }}</a>
                {% endif %}
            </div>
        </div>
        <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
            <img class="rounded-lg-3" src="{{ key.poster }}" alt="" height="405" width="auto">
        </div>
    </div>
</div>